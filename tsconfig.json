{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["es6", "dom"]
  },
  "include": ["pages"],
  "exclude": [
    ".next",
    "next.config.js",
    "server.js",
    "pages/_app.js",
    "store",
    "tsconfig.json"
  ]
}
